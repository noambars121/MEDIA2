        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Quick Actions</h3>
          </div>
          <div class="card-content space-y-3">
            <button class="w-full btn-outline text-left flex items-center gap-3" onclick="createQuickInvoice()">
              <svg class="w-5 h-5 text-primary-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
              Quick Invoice
            </button>
            <button class="w-full btn-outline text-left flex items-center gap-3" onclick="recordPayment()">
              <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
              </svg>
              Record Payment
            </button>
            <button class="w-full btn-outline text-left flex items-center gap-3" onclick="addExpense()">
              <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
              </svg>
              Add Expense
            </button>
            <button class="w-full btn-outline text-left flex items-center gap-3" onclick="sendReminder()">
              <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.732-.833-2.5 0L4.268 18.5c-.77.833.192 2.5 1.732 2.5z"></path>
              </svg>
              Send Reminder
            </button>
          </div>
        </div>

        <!-- Monthly Revenue Chart -->
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Revenue Trend</h3>
          </div>
          <div class="card-content">
            <div class="h-64 flex items-end justify-between space-x-2">
              <div class="flex flex-col items-center space-y-2">
                <div class="w-8 bg-primary-blue rounded-t" style="height: 60%"></div>
                <span class="text-xs text-muted-foreground">Jan</span>
              </div>
              <div class="flex flex-col items-center space-y-2">
                <div class="w-8 bg-primary-blue rounded-t" style="height: 75%"></div>
                <span class="text-xs text-muted-foreground">Feb</span>
              </div>
              <div class="flex flex-col items-center space-y-2">
                <div class="w-8 bg-primary-blue rounded-t" style="height: 45%"></div>
                <span class="text-xs text-muted-foreground">Mar</span>
              </div>
              <div class="flex flex-col items-center space-y-2">
                <div class="w-8 bg-primary-blue rounded-t" style="height: 85%"></div>
                <span class="text-xs text-muted-foreground">Apr</span>
              </div>
              <div class="flex flex-col items-center space-y-2">
                <div class="w-8 bg-primary-blue rounded-t" style="height: 70%"></div>
                <span class="text-xs text-muted-foreground">May</span>
              </div>
              <div class="flex flex-col items-center space-y-2">
                <div class="w-8 bg-primary-blue rounded-t" style="height: 90%"></div>
                <span class="text-xs text-muted-foreground">Jun</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Expenses and Tax Summary -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Recent Expenses -->
      <div class="card">
        <div class="card-header flex flex-row items-center justify-between">
          <h3 class="card-title">Recent Expenses</h3>
          <button class="text-sm text-primary-blue hover:underline" onclick="viewAllExpenses()">
            View All
          </button>
        </div>
        <div class="card-content">
          <div class="space-y-4">
