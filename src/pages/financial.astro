                  <svg class="w-4 h-4 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div>
                  <p class="font-medium">Camera Equipment</p>
                  <p class="text-sm text-muted-foreground">Jan 15, 2024</p>
                </div>
              </div>
              <span class="font-semibold text-red-600">-$1,200</span>
            </div>
            <div class="flex items-center justify-between p-3 border rounded-lg">
              <div class="flex items-center gap-3">
                <div class="p-2 bg-red-100 rounded-lg">
                  <svg class="w-4 h-4 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div>
                  <p class="font-medium">Travel Expenses</p>
                  <p class="text-sm text-muted-foreground">Jan 12, 2024</p>
                </div>
              </div>
              <span class="font-semibold text-red-600">-$450</span>
            </div>
            <div class="flex items-center justify-between p-3 border rounded-lg">
              <div class="flex items-center gap-3">
                <div class="p-2 bg-red-100 rounded-lg">
                  <svg class="w-4 h-4 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div>
                  <p class="font-medium">Software Subscription</p>
                  <p class="text-sm text-muted-foreground">Jan 10, 2024</p>
                </div>
              </div>
              <span class="font-semibold text-red-600">-$299</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Tax Summary -->
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Tax Summary</h3>
        </div>
        <div class="card-content space-y-4">
          <div class="flex justify-between items-center p-3 bg-blue-50 rounded-lg">
            <span class="font-medium">Q1 2024 Estimated Tax</span>
            <span class="font-semibold text-primary-blue">$2,150</span>
          </div>
          <div class="flex justify-between items-center p-3 border rounded-lg">
            <span>Total Deductible Expenses</span>
            <span class="font-semibold">$3,240</span>
          </div>
          <div class="flex justify-between items-center p-3 border rounded-lg">
            <span>Tax Savings</span>
            <span class="font-semibold text-green-600">$810</span>
          </div>
          <button class="w-full btn-primary mt-4" onclick="generateTaxReport()">
            Generate Tax Report
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Modals -->
  <div id="invoiceModal" class="modal-overlay hidden">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title">Create New Invoice</h3>
        <button class="modal-close" onclick="closeModal('invoiceModal')">&times;</button>
      </div>
      <div class="modal-body">
        <form id="invoiceForm" class="space-y-4">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium mb-2">Client</label>
              <select class="input-field w-full" required>
                <option value="">Select Client</option>
                <option value="client1">Sarah & Mike Johnson</option>
                <option value="client2">TechCorp Inc.</option>
                <option value="client3">Creative Studio</option>
              </select>
            </div>
            <div>
              <label class="block text-sm font-medium mb-2">Due Date</label>
              <input type="date" class="input-field w-full" required>
            </div>
          </div>
          
          <div>
            <label class="block text-sm font-medium mb-2">Description</label>
            <textarea class="input-field w-full" rows="3" placeholder="Wedding photography services..."></textarea>
          </div>

          <div class="space-y-3">
            <label class="block text-sm font-medium">Line Items</label>
            <div class="border rounded-lg p-4 space-y-3">
              <div class="grid grid-cols-4 gap-2">
                <input type="text" placeholder="Item" class="input-field">
                <input type="number" placeholder="Qty" class="input-field">
                <input type="number" placeholder="Rate" class="input-field">
                <div class="flex items-center">
                  <span class="text-sm font-medium">$0.00</span>
                </div>
              </div>
              <button type="button" class="text-primary-blue text-sm hover:underline">+ Add Line Item</button>
            </div>
          </div>

          <div class="flex justify-between items-center pt-4 border-t">
            <span class="text-lg font-semibold">Total: $0.00</span>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn-secondary" onclick="closeModal('invoiceModal')">Cancel</button>
        <button type="submit" form="invoiceForm" class="btn-primary">Create Invoice</button>
      </div>
    </div>
  </div>
</DashboardLayout> 

