---
import DashboardLayout from '@/layouts/DashboardLayout.astro';
---

<DashboardLayout>
  <!-- Financial Management Dashboard -->
  <div class="space-y-6">
    <!-- Header -->
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
      <div>
        <h1 class="text-3xl font-bold text-primary-blue">Financial Management</h1>
        <p class="text-muted-foreground">Manage invoices, track payments, and monitor your business finances</p>
      </div>
      <div class="flex flex-wrap gap-3">
        <button class="btn-primary" onclick="createInvoice()">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          Create Invoice
        </button>
        <button class="btn-secondary" onclick="exportReport()">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          Export Report
        </button>
      </div>
    </div>

    <!-- Financial Summary Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
      <div class="card p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-muted-foreground">Total Revenue</p>
            <p class="text-2xl font-bold text-primary-blue">$24,580</p>
            <p class="text-xs text-green-600">+12.5% from last month</p>
          </div>
          <div class="p-3 bg-green-100 rounded-full">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
            </svg>
          </div>
        </div>
      </div>

      <div class="card p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-muted-foreground">Outstanding</p>
            <p class="text-2xl font-bold text-orange-600">$8,420</p>
            <p class="text-xs text-orange-600">5 pending invoices</p>
          </div>
          <div class="p-3 bg-orange-100 rounded-full">
            <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
        </div>
      </div>

      <div class="card p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-muted-foreground">Monthly Expenses</p>
            <p class="text-2xl font-bold text-red-600">$3,240</p>
            <p class="text-xs text-red-600">+8.2% from last month</p>
          </div>
          <div class="p-3 bg-red-100 rounded-full">
            <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
            </svg>
          </div>
        </div>
      </div>

      <div class="card p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-muted-foreground">Net Profit</p>
            <p class="text-2xl font-bold text-primary-blue">$21,340</p>
            <p class="text-xs text-green-600">+15.3% from last month</p>
          </div>
          <div class="p-3 bg-blue-100 rounded-full">
            <svg class="w-6 h-6 text-primary-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Recent Invoices -->
      <div class="lg:col-span-2">
        <div class="card">
          <div class="card-header flex flex-row items-center justify-between">
            <h3 class="card-title">Recent Invoices</h3>
            <button class="text-sm text-primary-blue hover:underline" onclick="viewAllInvoices()">
              View All
            </button>
          </div>
          <div class="card-content">
            <div class="overflow-x-auto">
              <table class="w-full">
                <thead>
                  <tr class="border-b">
                    <th class="text-left p-3 font-medium text-muted-foreground">Invoice #</th>
                    <th class="text-left p-3 font-medium text-muted-foreground">Client</th>
                    <th class="text-left p-3 font-medium text-muted-foreground">Amount</th>
                    <th class="text-left p-3 font-medium text-muted-foreground">Status</th>
                    <th class="text-left p-3 font-medium text-muted-foreground">Due Date</th>
                    <th class="text-left p-3 font-medium text-muted-foreground">Actions</th>
                  </tr>
                </thead>
                <tbody id="invoicesTable">
                  <tr class="border-b hover:bg-gray-50">
                    <td class="p-3 font-medium">#INV-2024-001</td>
                    <td class="p-3">Sarah & Mike Johnson</td>
                    <td class="p-3">$2,500</td>
                    <td class="p-3">
                      <span class="px-2 py-1 text-xs font-medium bg-green-100 text-green-800 rounded-full">Paid</span>
                    </td>
                    <td class="p-3">Jan 15, 2024</td>
                    <td class="p-3">
                      <button class="text-primary-blue hover:underline text-sm">View</button>
                    </td>
                  </tr>
                  <tr class="border-b hover:bg-gray-50">
                    <td class="p-3 font-medium">#INV-2024-002</td>
                    <td class="p-3">TechCorp Inc.</td>
                    <td class="p-3">$4,200</td>
                    <td class="p-3">
                      <span class="px-2 py-1 text-xs font-medium bg-orange-100 text-orange-800 rounded-full">Pending</span>
                    </td>
                    <td class="p-3">Jan 20, 2024</td>
                    <td class="p-3">
                      <button class="text-primary-blue hover:underline text-sm">View</button>
                    </td>
                  </tr>
                  <tr class="border-b hover:bg-gray-50">
                    <td class="p-3 font-medium">#INV-2024-003</td>
                    <td class="p-3">Creative Studio</td>
                    <td class="p-3">$1,800</td>
                    <td class="p-3">
                      <span class="px-2 py-1 text-xs font-medium bg-red-100 text-red-800 rounded-full">Overdue</span>
                    </td>
                    <td class="p-3">Jan 10, 2024</td>
                    <td class="p-3">
                      <button class="text-primary-blue hover:underline text-sm">View</button>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

      <!-- Quick Actions & Revenue Chart -->
      <div class="space-y-6">
