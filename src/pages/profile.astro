---
import Layout from '@/layouts/Layout.astro';
import { Button } from '@/components/ui/Button';
---

<Layout title="Profile & Settings | MediaHand">
  <div class="min-h-screen bg-gradient-to-br from-indigo-900 via-purple-900 to-pink-800 relative overflow-hidden">
    <!-- Animated background elements -->
    <div class="absolute inset-0">
      <div class="absolute top-20 left-10 w-72 h-72 bg-purple-300 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-float"></div>
      <div class="absolute bottom-20 right-10 w-72 h-72 bg-pink-300 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-float" style="animation-delay: -3s;"></div>
      <div class="absolute top-1/2 left-1/3 w-80 h-80 bg-indigo-300 rounded-full mix-blend-multiply filter blur-xl opacity-15 animate-float" style="animation-delay: -6s;"></div>
    </div>

    <!-- Header -->
    <header class="relative z-10 px-6 py-6 border-b border-white/10">
      <div class="max-w-7xl mx-auto flex justify-between items-center">
        <div class="flex items-center space-x-3">
          <a href="/dashboard" class="w-10 h-10 bg-gradient-to-r from-purple-400 to-pink-400 rounded-xl flex items-center justify-center hover:scale-105 transition-transform">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </a>
          <div>
            <h1 class="text-2xl font-bold text-white font-display">Profile & Settings</h1>
            <p class="text-white/60 text-sm">Manage your account and preferences</p>
          </div>
        </div>
        <nav class="flex space-x-6 items-center">
          <a href="/dashboard" class="text-white/80 hover:text-white transition-colors font-medium">Dashboard</a>
          <a href="/clients" class="text-white/80 hover:text-white transition-colors font-medium">Clients</a>
          <button onclick="logout()" class="btn-secondary">Logout</button>
        </nav>
      </div>
    </header>

    <!-- Main Content -->
    <main class="relative z-10 px-6 py-12">
      <div class="max-w-5xl mx-auto">
        <!-- Page Header -->
        <div class="text-center mb-12">
          <h2 class="text-4xl font-bold text-white mb-4 font-display">
            Account <span class="gradient-text">Settings</span>
          </h2>
          <p class="text-xl text-white/80">Customize your MediaHand experience</p>
        </div>

        <!-- Settings Navigation -->
        <div class="glass-effect rounded-3xl p-2 mb-8">
          <div class="flex flex-wrap gap-2">
            <button onclick="showTab('profile')" id="profileTab" class="flex-1 bg-white/20 text-white rounded-2xl py-3 px-6 transition-all font-medium">
              Profile
            </button>
            <button onclick="showTab('account')" id="accountTab" class="flex-1 bg-transparent text-white/70 hover:bg-white/10 rounded-2xl py-3 px-6 transition-all font-medium">
              Account
            </button>
            <button onclick="showTab('business')" id="businessTab" class="flex-1 bg-transparent text-white/70 hover:bg-white/10 rounded-2xl py-3 px-6 transition-all font-medium">
              Business
            </button>
            <button onclick="showTab('notifications')" id="notificationsTab" class="flex-1 bg-transparent text-white/70 hover:bg-white/10 rounded-2xl py-3 px-6 transition-all font-medium">
              Notifications
            </button>
            <button onclick="showTab('security')" id="securityTab" class="flex-1 bg-transparent text-white/70 hover:bg-white/10 rounded-2xl py-3 px-6 transition-all font-medium">
              Security
            </button>
          </div>
        </div>

        <!-- Profile Tab -->
        <div id="profileContent" class="tab-content">
          <div class="glass-effect rounded-3xl p-8">
            <div class="grid lg:grid-cols-3 gap-8">
              <!-- Profile Picture Section -->
              <div class="lg:col-span-1">
                <div class="text-center">
                  <div class="relative inline-block mb-6">
                    <div class="w-32 h-32 bg-gradient-to-r from-purple-400 to-pink-400 rounded-full flex items-center justify-center mx-auto">
                      <span class="text-white font-bold text-4xl">JD</span>
                    </div>
                    <button class="absolute bottom-0 right-0 bg-white/20 hover:bg-white/30 text-white rounded-full p-3 transition-colors">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" />
                      </svg>
                    </button>
                  </div>
                  <h3 class="text-xl font-bold text-white mb-2">John Doe</h3>
                  <p class="text-white/70 mb-4">Professional Photographer</p>
                  <button class="btn-secondary w-full">Change Photo</button>
                </div>
              </div>

              <!-- Profile Form -->
              <div class="lg:col-span-2">
                <form class="space-y-6">
                  <div class="grid md:grid-cols-2 gap-6">
                    <div>
                      <label class="block text-white/80 text-sm font-medium mb-2">First Name</label>
                      <input type="text" value="John" class="w-full bg-white/10 border border-white/20 rounded-xl px-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-purple-400">
                    </div>
                    <div>
                      <label class="block text-white/80 text-sm font-medium mb-2">Last Name</label>
                      <input type="text" value="Doe" class="w-full bg-white/10 border border-white/20 rounded-xl px-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-purple-400">
                    </div>
                  </div>
                  
                  <div>
                    <label class="block text-white/80 text-sm font-medium mb-2">Professional Title</label>
                    <input type="text" value="Professional Photographer" class="w-full bg-white/10 border border-white/20 rounded-xl px-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-purple-400">
                  </div>
                  
                  <div>
                    <label class="block text-white/80 text-sm font-medium mb-2">Bio</label>
                    <textarea class="w-full bg-white/10 border border-white/20 rounded-xl px-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-purple-400 h-24" placeholder="Tell us about yourself and your work...">Passionate photographer with 10+ years of experience in wedding and portrait photography.</textarea>
                  </div>
                  
                  <div class="grid md:grid-cols-2 gap-6">
                    <div>
                      <label class="block text-white/80 text-sm font-medium mb-2">Phone</label>
                      <input type="tel" value="+1 (555) 123-4567" class="w-full bg-white/10 border border-white/20 rounded-xl px-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-purple-400">
                    </div>
                    <div>
                      <label class="block text-white/80 text-sm font-medium mb-2">Timezone</label>
                      <select class="w-full bg-white/10 border border-white/20 rounded-xl px-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-purple-400">
                        <option>UTC-5 (Eastern Time)</option>
                        <option>UTC-6 (Central Time)</option>
                        <option>UTC-7 (Mountain Time)</option>
                        <option>UTC-8 (Pacific Time)</option>
                      </select>
                    </div>
                  </div>
                  
                  <div class="flex justify-end">
                    <button type="submit" class="btn-primary">Save Changes</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>

        <!-- Account Tab -->
        <div id="accountContent" class="tab-content hidden">
          <div class="glass-effect rounded-3xl p-8">
            <h3 class="text-2xl font-bold text-white mb-8 font-display">Account Information</h3>
            <form class="space-y-6">
              <div>
                <label class="block text-white/80 text-sm font-medium mb-2">Email Address</label>
                <input type="email" value="john@example.com" class="w-full bg-white/10 border border-white/20 rounded-xl px-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-purple-400">
                <p class="text-white/60 text-sm mt-2">Your email is verified âœ“</p>
              </div>
              
              <div>
                <label class="block text-white/80 text-sm font-medium mb-2">Current Password</label>
                <input type="password" class="w-full bg-white/10 border border-white/20 rounded-xl px-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-purple-400">
              </div>
              
              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <label class="block text-white/80 text-sm font-medium mb-2">New Password</label>
                  <input type="password" class="w-full bg-white/10 border border-white/20 rounded-xl px-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-purple-400">
                </div>
                <div>
                  <label class="block text-white/80 text-sm font-medium mb-2">Confirm New Password</label>
                  <input type="password" class="w-full bg-white/10 border border-white/20 rounded-xl px-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-purple-400">
                </div>
              </div>
              
              <div class="flex justify-end">
                <button type="submit" class="btn-primary">Update Account</button>
              </div>
            </form>
          </div>
        </div>

        <!-- Business Tab -->
        <div id="businessContent" class="tab-content hidden">
          <div class="glass-effect rounded-3xl p-8">
            <h3 class="text-2xl font-bold text-white mb-8 font-display">Business Settings</h3>
            <form class="space-y-6">
              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <label class="block text-white/80 text-sm font-medium mb-2">Business Name</label>
                  <input type="text" value="John Doe Photography" class="w-full bg-white/10 border border-white/20 rounded-xl px-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-purple-400">
                </div>
                <div>
                  <label class="block text-white/80 text-sm font-medium mb-2">Business Type</label>
                  <select class="w-full bg-white/10 border border-white/20 rounded-xl px-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-purple-400">
                    <option>Photographer</option>
                    <option>Videographer</option>
                    <option>Content Creator</option>
                    <option>Agency</option>
                  </select>
                </div>
              </div>
              
              <div>
                <label class="block text-white/80 text-sm font-medium mb-2">Business Address</label>
                <input type="text" value="123 Main St, New York, NY 10001" class="w-full bg-white/10 border border-white/20 rounded-xl px-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-purple-400">
              </div>
              
              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <label class="block text-white/80 text-sm font-medium mb-2">Tax ID / VAT Number</label>
                  <input type="text" value="123-45-6789" class="w-full bg-white/10 border border-white/20 rounded-xl px-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-purple-400">
                </div>
                <div>
                  <label class="block text-white/80 text-sm font-medium mb-2">Currency</label>
                  <select class="w-full bg-white/10 border border-white/20 rounded-xl px-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-purple-400">
                    <option>ILS (â‚ª)</option>
                    <option>USD ($)</option>
                    <option>EUR (â‚¬)</option>
                    <option>GBP (Â£)</option>
                  </select>
                </div>
              </div>
              
              <div>
                <label class="block text-white/80 text-sm font-medium mb-2">Website</label>
                <input type="url" value="https://johndoephotography.com" class="w-full bg-white/10 border border-white/20 rounded-xl px-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-purple-400">
              </div>
              
              <div class="flex justify-end">
                <button type="submit" class="btn-primary">Save Business Settings</button>
              </div>
            </form>
          </div>
        </div>

        <!-- Notifications Tab -->
        <div id="notificationsContent" class="tab-content hidden">
          <div class="glass-effect rounded-3xl p-8">
            <h3 class="text-2xl font-bold text-white mb-8 font-display">Notification Preferences</h3>
            <div class="space-y-6">
              <!-- Email Notifications -->
              <div class="border-b border-white/10 pb-6">
                <h4 class="text-lg font-semibold text-white mb-4">Email Notifications</h4>
                <div class="space-y-4">
                  <label class="flex items-center space-x-3">
                    <input type="checkbox" checked class="w-5 h-5 text-purple-600 bg-white/10 border-white/20 rounded focus:ring-purple-400">
                    <span class="text-white">New client inquiries</span>
                  </label>
                  <label class="flex items-center space-x-3">
                    <input type="checkbox" checked class="w-5 h-5 text-purple-600 bg-white/10 border-white/20 rounded focus:ring-purple-400">
                    <span class="text-white">Project deadlines</span>
                  </label>
                  <label class="flex items-center space-x-3">
                    <input type="checkbox" class="w-5 h-5 text-purple-600 bg-white/10 border-white/20 rounded focus:ring-purple-400">
                    <span class="text-white">Payment reminders</span>
                  </label>
                  <label class="flex items-center space-x-3">
                    <input type="checkbox" checked class="w-5 h-5 text-purple-600 bg-white/10 border-white/20 rounded focus:ring-purple-400">
                    <span class="text-white">Weekly summary reports</span>
                  </label>
                </div>
              </div>
              
              <!-- Push Notifications -->
              <div class="border-b border-white/10 pb-6">
                <h4 class="text-lg font-semibold text-white mb-4">Push Notifications</h4>
                <div class="space-y-4">
                  <label class="flex items-center space-x-3">
                    <input type="checkbox" checked class="w-5 h-5 text-purple-600 bg-white/10 border-white/20 rounded focus:ring-purple-400">
                    <span class="text-white">Appointment reminders</span>
                  </label>
                  <label class="flex items-center space-x-3">
                    <input type="checkbox" class="w-5 h-5 text-purple-600 bg-white/10 border-white/20 rounded focus:ring-purple-400">
                    <span class="text-white">Task completions</span>
                  </label>
                  <label class="flex items-center space-x-3">
                    <input type="checkbox" checked class="w-5 h-5 text-purple-600 bg-white/10 border-white/20 rounded focus:ring-purple-400">
                    <span class="text-white">Client messages</span>
                  </label>
                </div>
              </div>
              
              <!-- Frequency Settings -->
              <div>
                <h4 class="text-lg font-semibold text-white mb-4">Email Frequency</h4>
                <select class="w-full md:w-auto bg-white/10 border border-white/20 rounded-xl px-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-purple-400">
                  <option>Immediate</option>
                  <option>Daily digest</option>
                  <option>Weekly digest</option>
                  <option>Never</option>
                </select>
              </div>
              
              <div class="flex justify-end">
                <button type="submit" class="btn-primary">Save Preferences</button>
              </div>
            </div>
          </div>
        </div>

        <!-- Security Tab -->
        <div id="securityContent" class="tab-content hidden">
          <div class="space-y-8">
            <!-- Two-Factor Authentication -->
            <div class="glass-effect rounded-3xl p-8">
              <h3 class="text-2xl font-bold text-white mb-6 font-display">Two-Factor Authentication</h3>
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-white mb-2">Secure your account with 2FA</p>
                  <p class="text-white/60 text-sm">Add an extra layer of security to your account</p>
                </div>
                <button class="btn-primary">Enable 2FA</button>
              </div>
            </div>
            
            <!-- Active Sessions -->
            <div class="glass-effect rounded-3xl p-8">
              <h3 class="text-2xl font-bold text-white mb-6 font-display">Active Sessions</h3>
              <div class="space-y-4">
                <div class="flex items-center justify-between p-4 bg-white/5 rounded-xl">
                  <div class="flex items-center space-x-4">
                    <div class="w-10 h-10 bg-green-500 rounded-full flex items-center justify-center">
                      <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                      </svg>
                    </div>
                    <div>
                      <p class="text-white font-medium">Windows - Chrome</p>
                      <p class="text-white/60 text-sm">Current session â€¢ New York, NY</p>
                    </div>
                  </div>
                  <span class="text-green-400 text-sm">Active</span>
                </div>
                
                <div class="flex items-center justify-between p-4 bg-white/5 rounded-xl">
                  <div class="flex items-center space-x-4">
                    <div class="w-10 h-10 bg-blue-500 rounded-full flex items-center justify-center">
                      <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
                      </svg>
                    </div>
                    <div>
                      <p class="text-white font-medium">iPhone - Safari</p>
                      <p class="text-white/60 text-sm">2 hours ago â€¢ New York, NY</p>
                    </div>
                  </div>
                  <button class="text-red-400 hover:text-red-300 text-sm transition-colors">Revoke</button>
                </div>
              </div>
            </div>
            
            <!-- Danger Zone -->
            <div class="glass-effect rounded-3xl p-8 border border-red-500/20">
              <h3 class="text-2xl font-bold text-red-400 mb-6 font-display">Danger Zone</h3>
              <div class="space-y-4">
                <div class="flex items-center justify-between">
                  <div>
                    <p class="text-white mb-1">Export Account Data</p>
                    <p class="text-white/60 text-sm">Download all your data in JSON format</p>
                  </div>
                  <button class="bg-white/10 hover:bg-white/20 text-white rounded-xl py-2 px-4 transition-colors">
                    Export Data
                  </button>
                </div>
                
                <div class="flex items-center justify-between pt-4 border-t border-white/10">
                  <div>
                    <p class="text-red-400 mb-1">Delete Account</p>
                    <p class="text-white/60 text-sm">Permanently delete your account and all data</p>
                  </div>
                  <button class="bg-red-600 hover:bg-red-700 text-white rounded-xl py-2 px-4 transition-colors">
                    Delete Account
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>

  <script>
    function logout() {
      document.cookie = 'sb-access-token=; Path=/; Expires=Thu, 01 Jan 1970 00:00:01 GMT;';
      document.cookie = 'sb-refresh-token=; Path=/; Expires=Thu, 01 Jan 1970 00:00:01 GMT;';
      window.location.href = '/';
    }

    function showTab(tabName) {
      // Hide all tab contents
      const tabContents = document.querySelectorAll('.tab-content');
      tabContents.forEach(content => content.classList.add('hidden'));
      
      // Remove active class from all tabs
      const tabs = document.querySelectorAll('[id$="Tab"]');
      tabs.forEach(tab => {
        tab.classList.remove('bg-white/20');
        tab.classList.add('bg-transparent', 'text-white/70');
      });
      
      // Show selected tab content
      document.getElementById(tabName + 'Content').classList.remove('hidden');
      
      // Add active class to selected tab
      const activeTab = document.getElementById(tabName + 'Tab');
      activeTab.classList.add('bg-white/20');
      activeTab.classList.remove('bg-transparent', 'text-white/70');
      activeTab.classList.add('text-white');
    }
  </script>
</Layout> 