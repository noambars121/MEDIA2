    function logout() {
      document.cookie = 'sb-access-token=; Path=/; Expires=Thu, 01 Jan 1970 00:00:01 GMT;';
      document.cookie = 'sb-refresh-token=; Path=/; Expires=Thu, 01 Jan 1970 00:00:01 GMT;';
      window.location.href = '/';
    }

    function setView(viewType) {
      const gridBtn = document.getElementById('gridView');
      const listBtn = document.getElementById('listView');
      
      if (viewType === 'grid') {
        gridBtn.classList.add('bg-white/20');
        gridBtn.classList.remove('text-white/70', 'hover:text-white', 'hover:bg-white/10');
        listBtn.classList.remove('bg-white/20');
        listBtn.classList.add('text-white/70', 'hover:text-white', 'hover:bg-white/10');
      } else {
        listBtn.classList.add('bg-white/20');
        listBtn.classList.remove('text-white/70', 'hover:text-white', 'hover:bg-white/10');
        gridBtn.classList.remove('bg-white/20');
        gridBtn.classList.add('text-white/70', 'hover:text-white', 'hover:bg-white/10');
      }
    }

    function openUploadModal() {
      document.getElementById('uploadModal').classList.remove('hidden');
    }

    function closeUploadModal() {
      document.getElementById('uploadModal').classList.add('hidden');
    }

    function openCollectionModal() {
      document.getElementById('collectionModal').classList.remove('hidden');
    }

    function closeCollectionModal() {
      document.getElementById('collectionModal').classList.add('hidden');
    }
  </script>
