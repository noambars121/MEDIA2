---
import Layout from '@/layouts/Layout.astro';
---

<Layout title="Dashboard - MediaHand">
  <div class="min-h-screen bg-black">
    <!-- Minimal grid pattern background -->
    <div class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,0.005)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.005)_1px,transparent_1px)] bg-[size:40px_40px]"></div>

    <!-- Navigation -->
    <nav class="relative z-10 px-6 py-5 border-b border-white/5">
      <div class="max-w-7xl mx-auto flex justify-between items-center">
        <div class="flex items-center space-x-8">
          <div class="flex items-center space-x-3">
            <div class="w-8 h-8 bg-white rounded-md flex items-center justify-center">
              <svg class="w-5 h-5 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <span class="text-lg font-medium text-white tracking-tight">MediaHand</span>
          </div>
          
          <div class="hidden md:flex space-x-8">
            <a href="/dashboard" class="nav-link active">Dashboard</a>
            <a href="/clients" class="nav-link">Clients</a>
            <a href="/projects" class="nav-link">Projects</a>
            <a href="/media" class="nav-link">Media</a>
            <a href="/analytics" class="nav-link">Analytics</a>
          </div>
        </div>
        
        <div class="flex items-center space-x-4">
          <button class="p-2 hover:bg-white/5 rounded-lg transition-colors">
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-5 5v-5z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17H4l5 5v-5z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 3H3v8h18V3z" />
            </svg>
          </button>
          <button class="p-2 hover:bg-white/5 rounded-lg transition-colors">
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </button>
          <div class="w-10 h-10 bg-white/10 rounded-full flex items-center justify-center">
            <span class="text-white text-sm font-medium">JP</span>
          </div>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="relative z-10 max-w-7xl mx-auto px-6 py-10">
      <!-- Page Header -->
      <div class="mb-12">
        <h1 class="text-3xl font-semibold text-white mb-3 tracking-tight">Dashboard</h1>
        <p class="text-gray-400 font-light">Welcome back. Here's what's happening with your business.</p>
      </div>

      <!-- Key Metrics -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
        <div class="card p-8">
          <div class="flex items-center justify-between mb-6">
            <h3 class="text-xs font-medium text-gray-400 uppercase tracking-wider">Active Projects</h3>
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
          </div>
          <div class="text-4xl font-semibold text-white mb-2 tracking-tight">24</div>
          <div class="text-sm text-gray-400 font-light">+3 from last month</div>
        </div>

        <div class="card p-8">
          <div class="flex items-center justify-between mb-6">
            <h3 class="text-xs font-medium text-gray-400 uppercase tracking-wider">Total Clients</h3>
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z" />
            </svg>
          </div>
          <div class="text-4xl font-semibold text-white mb-2 tracking-tight">156</div>
          <div class="text-sm text-gray-400 font-light">+12 from last month</div>
        </div>

        <div class="card p-8">
          <div class="flex items-center justify-between mb-6">
            <h3 class="text-xs font-medium text-gray-400 uppercase tracking-wider">Revenue</h3>
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1" />
            </svg>
          </div>
          <div class="text-4xl font-semibold text-white mb-2 tracking-tight">$24,680</div>
          <div class="text-sm text-gray-400 font-light">+18% from last month</div>
        </div>

        <div class="card p-8">
          <div class="flex items-center justify-between mb-6">
            <h3 class="text-xs font-medium text-gray-400 uppercase tracking-wider">Storage Used</h3>
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4z" />
            </svg>
          </div>
          <div class="text-4xl font-semibold text-white mb-2 tracking-tight">68%</div>
          <div class="text-sm text-gray-400 font-light">of 500GB plan</div>
        </div>
      </div>

      <!-- Main Dashboard Grid -->
      <div class="grid lg:grid-cols-3 gap-10">
        <!-- Left Column: Recent Activity & Quick Actions -->
        <div class="lg:col-span-2 space-y-10">
          <!-- Quick Actions -->
          <div class="card p-8">
            <h2 class="text-xl font-semibold text-white mb-8 tracking-tight">Quick Actions</h2>
            <div class="grid grid-cols-2 gap-6">
              <button class="btn-secondary p-6 text-left">
                <div class="flex items-center">
                  <svg class="w-5 h-5 text-white mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                  </svg>
                  <span class="font-medium tracking-tight">New Project</span>
                </div>
              </button>
              <button class="btn-secondary p-6 text-left">
                <div class="flex items-center">
                  <svg class="w-5 h-5 text-white mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
                  </svg>
                  <span class="font-medium tracking-tight">Add Client</span>
                </div>
              </button>
              <button class="btn-secondary p-6 text-left">
                <div class="flex items-center">
                  <svg class="w-5 h-5 text-white mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                  </svg>
                  <span class="font-medium tracking-tight">Upload Media</span>
                </div>
              </button>
              <button class="btn-secondary p-6 text-left">
                <div class="flex items-center">
                  <svg class="w-5 h-5 text-white mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                  <span class="font-medium tracking-tight">Create Invoice</span>
                </div>
              </button>
            </div>
          </div>

          <!-- Recent Activity -->
          <div class="card p-8">
            <h2 class="text-xl font-semibold text-white mb-8 tracking-tight">Recent Activity</h2>
            <div class="space-y-6">
              <div class="flex items-center space-x-4">
                <div class="w-2 h-2 bg-white rounded-full"></div>
                <div class="flex-1">
                  <p class="text-gray-300 font-light">Project "Johnson Wedding" marked as completed</p>
                  <p class="text-sm text-gray-500 font-light">2 hours ago</p>
                </div>
              </div>
              <div class="flex items-center space-x-4">
                <div class="w-2 h-2 bg-gray-500 rounded-full"></div>
                <div class="flex-1">
                  <p class="text-gray-300 font-light">New client "Sarah Mitchell" added</p>
                  <p class="text-sm text-gray-500 font-light">4 hours ago</p>
                </div>
              </div>
              <div class="flex items-center space-x-4">
                <div class="w-2 h-2 bg-gray-600 rounded-full"></div>
                <div class="flex-1">
                  <p class="text-gray-300 font-light">Invoice #INV-2024-056 sent to client</p>
                  <p class="text-sm text-gray-500 font-light">6 hours ago</p>
                </div>
              </div>
              <div class="flex items-center space-x-4">
                <div class="w-2 h-2 bg-gray-700 rounded-full"></div>
                <div class="flex-1">
                  <p class="text-gray-300 font-light">Media uploaded for "Corporate Headshots" project</p>
                  <p class="text-sm text-gray-500 font-light">1 day ago</p>
                </div>
              </div>
              <div class="flex items-center space-x-4">
                <div class="w-2 h-2 bg-gray-700 rounded-full"></div>
                <div class="flex-1">
                  <p class="text-gray-300 font-light">New project "Annual Report Photography" created</p>
                  <p class="text-sm text-gray-500 font-light">2 days ago</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Right Column: Storage & Recent Projects -->
        <div class="space-y-10">
          <!-- Storage Usage -->
          <div class="card p-8">
            <h2 class="text-xl font-semibold text-white mb-8 tracking-tight">Storage Usage</h2>
            <div class="space-y-6">
              <div>
                <div class="flex justify-between items-center mb-3">
                  <span class="text-gray-300 font-light">Photos</span>
                  <span class="text-gray-400 font-light">245 GB</span>
                </div>
                <div class="progress-bar">
                  <div class="progress-fill" style="width: 49%"></div>
                </div>
              </div>
              <div>
                <div class="flex justify-between items-center mb-3">
                  <span class="text-gray-300 font-light">Videos</span>
                  <span class="text-gray-400 font-light">95 GB</span>
                </div>
                <div class="progress-bar">
                  <div class="progress-fill" style="width: 19%"></div>
                </div>
              </div>
              <div>
                <div class="flex justify-between items-center mb-3">
                  <span class="text-gray-300 font-light">Other</span>
                  <span class="text-gray-400 font-light">12 GB</span>
                </div>
                <div class="progress-bar">
                  <div class="progress-fill" style="width: 2.4%"></div>
                </div>
              </div>
              <div class="pt-6 border-t border-white/5">
                <div class="flex justify-between items-center">
                  <span class="text-white font-medium tracking-tight">Total Used</span>
                  <span class="text-white font-medium tracking-tight">352 GB / 500 GB</span>
                </div>
              </div>
            </div>
          </div>

          <!-- Recent Projects -->
          <div class="card p-8">
            <h2 class="text-xl font-semibold text-white mb-8 tracking-tight">Recent Projects</h2>
            <div class="space-y-4">
              <div class="flex items-center justify-between p-4 hover:bg-white/5 rounded-lg transition-colors">
                <div>
                  <p class="text-gray-300 font-medium tracking-tight">Johnson Wedding</p>
                  <p class="text-sm text-gray-500 font-light">Wedding Photography</p>
                </div>
                <span class="status-active">Completed</span>
              </div>
              <div class="flex items-center justify-between p-4 hover:bg-white/5 rounded-lg transition-colors">
                <div>
                  <p class="text-gray-300 font-medium tracking-tight">Corporate Headshots</p>
                  <p class="text-sm text-gray-500 font-light">Business Photography</p>
                </div>
                <span class="status-active">In Progress</span>
              </div>
              <div class="flex items-center justify-between p-4 hover:bg-white/5 rounded-lg transition-colors">
                <div>
                  <p class="text-gray-300 font-medium tracking-tight">Family Portrait Session</p>
                  <p class="text-sm text-gray-500 font-light">Portrait Photography</p>
                </div>
                <span class="status-pending">Pending</span>
              </div>
              <div class="flex items-center justify-between p-4 hover:bg-white/5 rounded-lg transition-colors">
                <div>
                  <p class="text-gray-300 font-medium tracking-tight">Product Catalog</p>
                  <p class="text-sm text-gray-500 font-light">Commercial Photography</p>
                </div>
                <span class="status-active">In Progress</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</Layout> 