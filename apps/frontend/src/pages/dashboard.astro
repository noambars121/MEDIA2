---
import Layout from '@/layouts/Layout.astro';
---

<Layout title="Dashboard - MediaHand">
  <div class="min-h-screen bg-gradient-to-br from-slate-900 via-black to-slate-900 relative overflow-hidden">
    <!-- Premium Animated Background -->
    <div class="absolute inset-0">
      <!-- Grid Pattern -->
      <div class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,0.005)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.005)_1px,transparent_1px)] bg-[size:40px_40px]"></div>
      
      <!-- Animated Gradient Orbs -->
      <div class="absolute top-1/4 -left-20 w-96 h-96 bg-gradient-to-br from-blue-500/20 to-purple-600/20 rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute top-3/4 -right-20 w-96 h-96 bg-gradient-to-br from-purple-500/20 to-indigo-600/20 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s"></div>
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-80 h-80 bg-gradient-to-br from-cyan-500/10 to-blue-600/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 4s"></div>
    </div>

    <!-- Navigation -->
    <nav class="relative z-10 px-6 py-6 border-b border-white/10 backdrop-blur-xl bg-black/20">
      <div class="max-w-7xl mx-auto flex justify-between items-center">
        <div class="flex items-center space-x-8">
          <div class="flex items-center space-x-3">
            <div class="w-9 h-9 bg-gradient-to-br from-blue-500 to-purple-600 rounded-xl flex items-center justify-center shadow-lg">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <span class="text-xl font-bold text-white tracking-tight">MediaHand</span>
          </div>
          
          <div class="hidden md:flex space-x-8">
            <a href="/dashboard" class="nav-link active">Dashboard</a>
            <a href="/clients" class="nav-link">Clients</a>
            <a href="/projects" class="nav-link">Projects</a>
            <a href="/media" class="nav-link">Media</a>
            <a href="/ai-content" class="nav-link">Generate Content</a>
            <a href="/scheduling" class="nav-link">Scheduling</a>
            <a href="/analytics" class="nav-link">Analytics</a>
          </div>
        </div>
        
        <div class="flex items-center space-x-4">
          <button class="p-2.5 hover:bg-white/10 rounded-xl transition-all duration-300 group">
            <svg class="w-5 h-5 text-gray-400 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-5 5v-5z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17H4l5 5v-5z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 3H3v8h18V3z" />
            </svg>
          </button>
          <button class="p-2.5 hover:bg-white/10 rounded-xl transition-all duration-300 group">
            <svg class="w-5 h-5 text-gray-400 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </button>
          <div class="w-11 h-11 bg-gradient-to-br from-blue-500 to-purple-600 rounded-xl flex items-center justify-center shadow-lg">
            <span class="text-white text-sm font-bold">JP</span>
          </div>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="relative z-10 max-w-7xl mx-auto px-6 py-12">
      <!-- Page Header -->
      <div class="mb-16">
        <h1 class="text-5xl font-bold bg-gradient-to-r from-white via-blue-100 to-purple-200 bg-clip-text text-transparent mb-4 tracking-tight">
          Dashboard
        </h1>
        <p class="text-xl text-gray-300 font-light">Welcome back. Here's what's happening with your business.</p>
      </div>

      <!-- Key Metrics -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-16">
        <div class="glass-card group hover:scale-105 transition-all duration-300">
          <div class="flex items-center justify-between mb-6">
            <h3 class="text-xs font-medium text-gray-400 uppercase tracking-wider">Active Projects</h3>
            <div class="p-2 bg-gradient-to-br from-blue-500/20 to-purple-600/20 rounded-lg group-hover:from-blue-500/30 group-hover:to-purple-600/30 transition-all duration-300">
              <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
              </svg>
            </div>
          </div>
          <div class="text-4xl font-bold text-white mb-2 tracking-tight">24</div>
          <div class="text-sm text-emerald-400 font-medium flex items-center">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
            </svg>
            +3 from last month
          </div>
        </div>

        <div class="glass-card group hover:scale-105 transition-all duration-300">
          <div class="flex items-center justify-between mb-6">
            <h3 class="text-xs font-medium text-gray-400 uppercase tracking-wider">Total Clients</h3>
            <div class="p-2 bg-gradient-to-br from-emerald-500/20 to-teal-600/20 rounded-lg group-hover:from-emerald-500/30 group-hover:to-teal-600/30 transition-all duration-300">
              <svg class="w-5 h-5 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z" />
              </svg>
            </div>
          </div>
          <div class="text-4xl font-bold text-white mb-2 tracking-tight">156</div>
          <div class="text-sm text-emerald-400 font-medium flex items-center">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
            </svg>
            +12 from last month
          </div>
        </div>

        <div class="glass-card group hover:scale-105 transition-all duration-300">
          <div class="flex items-center justify-between mb-6">
            <h3 class="text-xs font-medium text-gray-400 uppercase tracking-wider">Revenue</h3>
            <div class="p-2 bg-gradient-to-br from-green-500/20 to-emerald-600/20 rounded-lg group-hover:from-green-500/30 group-hover:to-emerald-600/30 transition-all duration-300">
              <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1" />
              </svg>
            </div>
          </div>
          <div class="text-4xl font-bold text-white mb-2 tracking-tight">$24,680</div>
          <div class="text-sm text-emerald-400 font-medium flex items-center">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
            </svg>
            +18% from last month
          </div>
        </div>

        <div class="glass-card group hover:scale-105 transition-all duration-300">
          <div class="flex items-center justify-between mb-6">
            <h3 class="text-xs font-medium text-gray-400 uppercase tracking-wider">Storage Used</h3>
            <div class="p-2 bg-gradient-to-br from-purple-500/20 to-indigo-600/20 rounded-lg group-hover:from-purple-500/30 group-hover:to-indigo-600/30 transition-all duration-300">
              <svg class="w-5 h-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4z" />
              </svg>
            </div>
          </div>
          <div class="text-4xl font-bold text-white mb-2 tracking-tight">68%</div>
          <div class="text-sm text-gray-400 font-medium">of 500GB plan</div>
        </div>
      </div>

      <!-- Main Dashboard Grid -->
      <div class="grid lg:grid-cols-3 gap-12">
        <!-- Left Column: Recent Activity & Quick Actions -->
        <div class="lg:col-span-2 space-y-12">
          <!-- Quick Actions -->
          <div class="glass-card">
            <h2 class="text-2xl font-bold bg-gradient-to-r from-white to-gray-300 bg-clip-text text-transparent mb-8 tracking-tight">
              Quick Actions
            </h2>
            <div class="grid grid-cols-2 lg:grid-cols-3 gap-6">
              <button class="premium-action-card group" onclick="window.location.href='/projects'">
                <div class="flex flex-col items-center text-center">
                  <div class="p-4 bg-gradient-to-br from-blue-500 to-purple-600 rounded-2xl mb-4 shadow-lg">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                    </svg>
                  </div>
                  <span class="font-semibold text-white tracking-tight">New Project</span>
                </div>
              </button>
              <button class="premium-action-card group" onclick="window.location.href='/clients'">
                <div class="flex flex-col items-center text-center">
                  <div class="p-4 bg-gradient-to-br from-emerald-500 to-teal-600 rounded-2xl mb-4 shadow-lg">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
                    </svg>
                  </div>
                  <span class="font-semibold text-white tracking-tight">Add Client</span>
                </div>
              </button>
              <button class="premium-action-card group" onclick="window.location.href='/ai-content'">
                <div class="flex flex-col items-center text-center">
                  <div class="p-4 bg-gradient-to-br from-purple-500 to-pink-600 rounded-2xl mb-4 shadow-lg">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                    </svg>
                  </div>
                  <span class="font-semibold text-white tracking-tight">AI Content</span>
                </div>
              </button>
              <button class="premium-action-card group" onclick="window.location.href='/media'">
                <div class="flex flex-col items-center text-center">
                  <div class="p-4 bg-gradient-to-br from-cyan-500 to-blue-600 rounded-2xl mb-4 shadow-lg">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                    </svg>
                  </div>
                  <span class="font-semibold text-white tracking-tight">Upload Media</span>
                </div>
              </button>
              <button class="premium-action-card group" onclick="window.location.href='/financial'">
                <div class="flex flex-col items-center text-center">
                  <div class="p-4 bg-gradient-to-br from-green-500 to-emerald-600 rounded-2xl mb-4 shadow-lg">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                  </div>
                  <span class="font-semibold text-white tracking-tight">Create Invoice</span>
                </div>
              </button>
              <button class="premium-action-card group" onclick="window.location.href='/scheduling'">
                <div class="flex flex-col items-center text-center">
                  <div class="p-4 bg-gradient-to-br from-orange-500 to-red-600 rounded-2xl mb-4 shadow-lg">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                  </div>
                  <span class="font-semibold text-white tracking-tight">Schedule Session</span>
                </div>
              </button>
            </div>
          </div>

          <!-- Recent Activity -->
          <div class="glass-card">
            <h2 class="text-2xl font-bold bg-gradient-to-r from-white to-gray-300 bg-clip-text text-transparent mb-8 tracking-tight">
              Recent Activity
            </h2>
            <div class="space-y-6">
              <div class="flex items-center space-x-4 p-4 bg-white/5 rounded-xl border border-white/10 hover:bg-white/10 transition-all duration-300">
                <div class="w-3 h-3 bg-emerald-400 rounded-full animate-pulse"></div>
                <div class="flex-1">
                  <p class="text-gray-200 font-medium">Project "Johnson Wedding" marked as completed</p>
                  <p class="text-sm text-gray-400 font-light">2 hours ago</p>
                </div>
              </div>
              <div class="flex items-center space-x-4 p-4 bg-white/5 rounded-xl border border-white/10 hover:bg-white/10 transition-all duration-300">
                <div class="w-3 h-3 bg-blue-400 rounded-full"></div>
                <div class="flex-1">
                  <p class="text-gray-200 font-medium">New client "Sarah Mitchell" added</p>
                  <p class="text-sm text-gray-400 font-light">4 hours ago</p>
                </div>
              </div>
              <div class="flex items-center space-x-4 p-4 bg-white/5 rounded-xl border border-white/10 hover:bg-white/10 transition-all duration-300">
                <div class="w-3 h-3 bg-purple-400 rounded-full"></div>
                <div class="flex-1">
                  <p class="text-gray-200 font-medium">Invoice #INV-2024-056 sent to client</p>
                  <p class="text-sm text-gray-400 font-light">6 hours ago</p>
                </div>
              </div>
              <div class="flex items-center space-x-4 p-4 bg-white/5 rounded-xl border border-white/10 hover:bg-white/10 transition-all duration-300">
                <div class="w-3 h-3 bg-orange-400 rounded-full"></div>
                <div class="flex-1">
                  <p class="text-gray-200 font-medium">Media uploaded for "Corporate Headshots" project</p>
                  <p class="text-sm text-gray-400 font-light">1 day ago</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Right Column: Upcoming & Stats -->
        <div class="space-y-12">
          <!-- Upcoming Sessions -->
          <div class="glass-card">
            <h2 class="text-xl font-bold bg-gradient-to-r from-white to-gray-300 bg-clip-text text-transparent mb-6 tracking-tight">
              Upcoming Sessions
            </h2>
            <div class="space-y-4">
              <div class="p-4 bg-gradient-to-r from-blue-500/10 to-purple-600/10 rounded-xl border border-blue-500/20">
                <h3 class="font-semibold text-white mb-1">Wedding Photography</h3>
                <p class="text-sm text-gray-300 mb-2">Sarah & Michael's Wedding</p>
                <p class="text-xs text-blue-400 font-medium">Tomorrow, 2:00 PM</p>
              </div>
              <div class="p-4 bg-gradient-to-r from-emerald-500/10 to-teal-600/10 rounded-xl border border-emerald-500/20">
                <h3 class="font-semibold text-white mb-1">Corporate Headshots</h3>
                <p class="text-sm text-gray-300 mb-2">Tech Solutions Inc.</p>
                <p class="text-xs text-emerald-400 font-medium">Friday, 10:00 AM</p>
              </div>
              <div class="p-4 bg-gradient-to-r from-purple-500/10 to-pink-600/10 rounded-xl border border-purple-500/20">
                <h3 class="font-semibold text-white mb-1">Product Shoot</h3>
                <p class="text-sm text-gray-300 mb-2">Fashion Brand X</p>
                <p class="text-xs text-purple-400 font-medium">Next Monday, 9:00 AM</p>
              </div>
            </div>
          </div>

          <!-- Performance Overview -->
          <div class="glass-card">
            <h2 class="text-xl font-bold bg-gradient-to-r from-white to-gray-300 bg-clip-text text-transparent mb-6 tracking-tight">
              Performance Overview
            </h2>
            <div class="space-y-6">
              <div>
                <div class="flex justify-between items-center mb-2">
                  <span class="text-sm text-gray-300">Project Completion</span>
                  <span class="text-sm text-white font-semibold">92%</span>
                </div>
                <div class="w-full bg-white/10 rounded-full h-2">
                  <div class="bg-gradient-to-r from-emerald-500 to-teal-600 h-2 rounded-full" style="width: 92%"></div>
                </div>
              </div>
              <div>
                <div class="flex justify-between items-center mb-2">
                  <span class="text-sm text-gray-300">Client Satisfaction</span>
                  <span class="text-sm text-white font-semibold">96%</span>
                </div>
                <div class="w-full bg-white/10 rounded-full h-2">
                  <div class="bg-gradient-to-r from-blue-500 to-purple-600 h-2 rounded-full" style="width: 96%"></div>
                </div>
              </div>
              <div>
                <div class="flex justify-between items-center mb-2">
                  <span class="text-sm text-gray-300">Revenue Target</span>
                  <span class="text-sm text-white font-semibold">78%</span>
                </div>
                <div class="w-full bg-white/10 rounded-full h-2">
                  <div class="bg-gradient-to-r from-green-500 to-emerald-600 h-2 rounded-full" style="width: 78%"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</Layout>

<style>
  /* Navigation styles */
  .nav-link {
    @apply text-gray-400 hover:text-white transition-all duration-300 font-medium tracking-tight 
           relative px-4 py-2 rounded-xl hover:bg-white/10;
  }
  
  .nav-link.active {
    @apply text-white bg-white/20 shadow-lg backdrop-blur-sm;
  }
  
  .nav-link.active::before {
    content: '';
    @apply absolute bottom-0 left-1/2 transform -translate-x-1/2 w-1 h-1 
           bg-gradient-to-r from-blue-500 to-purple-600 rounded-full;
  }

  /* Glass morphism card styles */
  .glass-card {
    @apply bg-white/5 backdrop-blur-xl border border-white/10 rounded-3xl p-8
           shadow-2xl hover:shadow-blue-500/10 transition-all duration-300
           hover:bg-white/10 hover:border-white/20;
  }

  /* Premium action cards */
  .premium-action-card {
    @apply bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-6 
           hover:bg-white/10 transition-all duration-300 hover:scale-105 
           hover:shadow-xl hover:border-white/20;
  }

  /* Enhanced animations */
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-5px); }
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  /* Pulse animation with delay */
  @keyframes pulse-delayed {
    0%, 100% { opacity: 0.6; }
    50% { opacity: 1; }
  }
</style> 